@model Movie

<div class="row">
    <div class="col-md-3">
            @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <div class="card mb-4">
            <div class="row no-gutter">
                <div class="col-md-3">
                    <img src="~/images/@Model.ImageUrl" alt="@Model.Description" class="card-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text"> @Html.Raw(@Model.Description)</p>
                        <p class="card-text">
                            <small class="text-muted">3 days ago</small>
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
